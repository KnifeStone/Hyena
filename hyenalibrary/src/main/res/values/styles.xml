<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 带清除的输入框 -->
    <declare-styleable name="ClearEditTextStyle">
        <!-- 图标 -->
        <attr name="drawable_clear" format="reference" />
        <attr name="drawable_tint" />
        <attr name="drawable_follow_focus" />
    </declare-styleable>

    <!-- 带眼睛的输入框 -->
    <declare-styleable name="EyesEditTextStyle">
        <!-- 明文图标 -->
        <attr name="drawable_visibility" format="reference" />
        <!-- 密文图标 -->
        <attr name="drawable_visibility_off" format="reference" />
        <attr name="drawable_tint" />
        <attr name="drawable_follow_focus" />
    </declare-styleable>

    <!-- icon着色 -->
    <attr name="drawable_tint" format="color" />
    <!-- 跟随焦点 -->
    <attr name="drawable_follow_focus" format="boolean" />

    <!-- 菜单item属性 -->
    <declare-styleable name="MenuItemViewStyle">
        <attr name="layout_background" format="reference|integer" />
        <attr name="iv_icon_src" format="reference|integer" />
        <attr name="tv_title_string" format="string" />
        <attr name="tv_title_color" format="color" />
        <attr name="tv_title_drawable" format="reference|integer" />
        <attr name="tv_content_text" format="string" />
        <attr name="tv_content_text_color" format="color" />
        <attr name="tv_content_drawable" format="reference|integer" />
        <attr name="tv_content_gravity" format="integer">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="iv_right_src" format="reference|integer" />
        <attr name="v_line_visibility" format="boolean" />
    </declare-styleable>




</resources>