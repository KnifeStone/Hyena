<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorwindowBackground</item>
        <!--<item name="colorControlHighlight">@color/colorControlHighlight</item>-->
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <!--<item name="colorControlActivated">#00B7EE</item>-->
        <!--<item name="colorControlNormal">#BDC0BA</item>-->

    </style>

    <style name="AppTheme.ButtonDefault" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="LayoutShapeDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@drawable/shape_layout</item>
    </style>

    <style name="TextViewTitleSmallLow">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#0089A7</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="EditTextDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_edittext</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <declare-styleable name="ViewPagerTitle">
        <attr name="background_content_color" format="color" />
        <attr name="defaultTextViewColor" format="color"></attr>
        <attr name="selectedTextViewColor" format="color"></attr>
        <attr name="defaultTextViewSize" format="dimension" />
        <attr name="selectedTextViewSize" format="dimension" />
        <attr name="item_margins" format="dimension" />
        <attr name="line_start_color" format="color" />
        <attr name="line_end_color" format="color" />
        <attr name="line_height" format="integer" />
    </declare-styleable>

    <attr name="hyena_text_color_checked" format="reference" />
    <attr name="hyena_text_size_checked" format="dimension" />
    <attr name="hyena_text_size_normal" format="dimension" />
    <attr name="hyena_text_margin" format="dimension" />
    <attr name="hyena_custom_layout" format="reference" />

    <declare-styleable name="HyenaViewPagerIndex">
        <attr name="hyena_text_color_checked" />
        <attr name="hyena_text_size_checked" />
        <attr name="hyena_text_size_normal" />
        <attr name="hyena_text_margin" />
        <attr name="hyena_index_model" format="enum">
            <!--均分-->
            <enum name="split" value="0" />
            <!--随性-->
            <enum name="casual" value="1" />
        </attr>
        <attr name="hyena_custom_layout" />
    </declare-styleable>

</resources>
