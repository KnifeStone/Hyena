<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.knifestone.hyena.indicator.HyenaViewPagerIndicator
            android:id="@+id/viewPageIndex1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@android:color/white"
            android:elevation="2dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary30" />

        <com.knifestone.hyena.indicator.HyenaViewPagerIndicator
            android:id="@+id/viewPageIndex2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@android:color/white"
            android:elevation="2dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary30" />

        <com.knifestone.hyena.indicator.HyenaViewPagerIndicator
            android:id="@+id/viewPageIndex3"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:hyena_index_model="center" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary30" />

        <com.knifestone.hyena.indicator.HyenaViewPagerIndicator
            android:id="@+id/viewPageIndex4"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:hyena_index_model="sort" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary30" />

    </LinearLayout>


</ScrollView>