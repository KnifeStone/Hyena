<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.hyena">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.ViewActivity"
            android:label="常用View"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".ui.CurrencyActivity"
            android:label="通用"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".ui.LoginActivity"
            android:label="登录" />

        <activity
            android:name=".ui.WhereGoActivity"
            android:label="多种布局切换" />

        <activity
            android:name=".ui.WhereGoFragmentActivity"
            android:label="多种布局切换Fragment" />

        <activity android:name=".ui.scroller.ScrollerActivity"
            android:label="Scroller知识"/>

    </application>

</manifest>